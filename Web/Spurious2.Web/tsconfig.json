{
    "compileOnSave": false,
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "esnext",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "target": "es5",
        "lib": [
            "es2015",
            "dom"
        ],
        "moduleResolution": "node",
        "baseUrl": "src",
        "resolveJsonModule": true,
        "importHelpers": true,
        "allowJs": true,
        "outDir": "blah",
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "exclude": [
        "node_modules",
        "aurelia_project",
        "wwwroot",
        "bin",
        "obj"
    ],
    "filesGlob": [
        "./src/**/*.ts",
        "./test/**/*.ts",
        "./custom_typings/**/*.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
